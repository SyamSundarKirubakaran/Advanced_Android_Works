<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bugscript.flexiblefragments.MainActivity">

    <LinearLayout
        android:id="@+id/android_me_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <FrameLayout android:id="@+id/container_1"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>

        <FrameLayout android:id="@+id/container_2"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>

        <FrameLayout android:id="@+id/container_3"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>

        <FrameLayout android:id="@+id/container_4"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>


    </LinearLayout>

</ScrollView>




